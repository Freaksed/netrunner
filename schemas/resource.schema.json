{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "type": "object",
  "properties": {
    "deck": { "$ref": "deck.schema.json" },
    "title": { "type": "string" },
    "type": { "const": "Resource" },
    "subtypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Clan",
          "Clone",
          "Companion",
          "Connection",
          "Directive",
          "Genetics",
          "Government",
          "Job",
          "Link",
          "Location",
          "Remote",
          "Ritzy",
          "Sabotage",
          "Seedy",
          "Source",
          "Stealth",
          "Virtual"
        ]
      },
      "uniqueItems": true
    },
    "install_cost": { "type": "integer" },
    "abilities": { "type": "array" }
  },
  "required": ["deck", "title", "type", "install_cost", "abilities"]
}
