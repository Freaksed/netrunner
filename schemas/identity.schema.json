{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Identity Schema",
  "type": "object",
  "properties": {
    "deck": { "$ref": "deck.schema.json" },
    "title": { "type": "string" },
    "type": { "const": "Identity" },
    "subtypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Bioroid",
          "Clone",
          "Corp",
          "Cyborg",
          "Digital",
          "G-Mod",
          "Megacorp",
          "Natural",
          "Police Department",
          "Stealth",
          "Subsidiary",
          "Unsubstantiated"
        ]
      },
      "uniqueItems": true
    },
    "abilities": { "type": "array" }
  },
  "required": ["deck", "title", "type", "subtypes", "abilities"]
}
