{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operation Schema",
  "allOf": [
    { "$ref": "./base.schema.json" },
    {
      "type": "object",
      "properties": {
        "subtypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Alliance",
              "Black Ops",
              "Condition",
              "Current",
              "Double",
              "Gray Ops",
              "Illicit",
              "Lockdown",
              "Mandate",
              "Psi",
              "Reprisal",
              "Terminal",
              "Transaction",
              "Triple"
            ]
          }
        },
        "play_cost": { "type": "integer" }
      },
      "required": ["play_cost"]
    }
  ]
}
