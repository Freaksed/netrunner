{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Upgrade Schema",
  "allOf": [
    { "$ref": "./base.schema.json" },
    {
      "type": "object",
      "properties": {
        "subtypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Academic",
              "Advertisement",
              "Alliance",
              "Ambush",
              "Beanstalk",
              "Bioroid",
              "Character",
              "Clone",
              "Enforcer",
              "Executive",
              "Expendable",
              "Facility",
              "Hostile",
              "Off-site",
              "Orgcrime",
              "Psi",
              "Region",
              "Ritzy",
              "Seedy",
              "Security Protocol",
              "Sysop",
              "Unorthodox"
            ]
          }
        },
        "rez_cost": { "type": "integer" },
        "trash_cost": { "type": "integer" }
      },
      "required": ["rez_cost", "trash_cost"]
    }
  ]
}
