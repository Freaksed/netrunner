{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runner Schema",
  "allOf": [
    { "$ref": "./base.schema.json" },
    {
      "type": "object",
      "properties": {
        "cards_min": { "type": "integer" },
        "influence": { "type": "integer" },
        "subtypes": { "type": "array" },
        "memory": { "type": "integer" },
        "link": { "type": "integer" }
      },
      "required": ["cards_min", "influence", "subtypes", "memory", "link"]
    }
  ]
}
